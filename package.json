{
    "name": "transcriberbot",
    "version": "1.0.0",
    "description": "Transcribe Discord voice channel conversations.",
    "main": "index.js",
    "scripts": {
        "start": "node ./ts-built/index.js",
        "debug": "node --trace-warnings ./ts-built/index.js",
        "test": "mocha ts-built/test/**/*.js",
        "format": "prettier --write ./src",
        "lint": "eslint --fix './src/**/*.ts'"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@discordjs/opus": "^0.3.3",
        "db-migrate": "^0.11.12",
        "db-migrate-mysql8": "^1.0.1",
        "discord.js": "^12.5.1",
        "dotenv": "^8.2.0",
        "ffmpeg-static": "^4.2.7",
        "ibm-watson": "^5.7.3",
        "inversify": "^5.0.5",
        "mysql2": "^2.2.5",
        "reflect-metadata": "^0.1.13",
        "sql-template-strings": "^2.2.2",
        "typescript": "^4.1.3"
    },
    "mocha": {
        "recursive": true,
        "extension": [
            "js"
        ],
        "parallel": false,
        "exit": true,
        "timeout": 20000,
        "slow": 450,
        "require": "ts-built/test/setup.js"
    },
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.2.0",
        "@types/mysql": "^2.15.17",
        "@types/node": "^14.14.21",
        "@typescript-eslint/eslint-plugin": "^4.13.0",
        "@typescript-eslint/parser": "^4.13.0",
        "chai": "^4.2.0",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-mocha": "^8.0.0",
        "mocha": "^8.2.1",
        "prettier": "^2.2.1"
    }
}
